<%= f.date_field :owari %>
<br>
<a>人数</a><br>
<a><%= f.number_field :nanmei %></a>
<br>
</div>
<div>

<%= f.hidden_field :roomname, value: @post.roomname %>
<%= f.hidden_field :juusyo, value: @post.juusyo %>
<%= f.hidden_field :roomdata, value: @post.roomdata %>
<%= f.hidden_field :kane, value: @post.kane %>
<%= f.hidden_field :id, value: @post.id %>
<%= f.hidden_field :user_id, value: @post.user_id %>

<div class="actions">
<%= f.submit "登録確認に進む" %>
<% end %>
</div>
</div>
